<!-- ! Sidebar -->
<aside class="sidebar">
    <div class="sidebar-start">
        <div class="sidebar-head">
            <a href="/admin" class="logo-wrapper" title="Home">
                <span class="sr-only">Home</span>
                <span class="icon logo" aria-hidden="true"></span>
                <div class="logo-text">
                    <span class="logo-title">AIRMIND</span>
                    <span class="logo-subtitle">Dashboard</span>
                </div>
            </a>
            <button class="sidebar-toggle transparent-btn" title="Menu" type="button">
                <span class="sr-only">Toggle menu</span>
                <span class="icon menu-toggle" aria-hidden="true"></span>
            </button>
        </div>
        <div class="sidebar-body">
            <ul class="sidebar-body-menu">
                <li>
                    <a href="/admin"><span class="icon home" aria-hidden="true"></span>Dashboard</a>
                </li>
                <li>
                    <a href="/prediction">
                        <span class="icon document" aria-hidden="true"></span>Prediction
                    </a>
                </li>
                <li>
                    <a href="/getDataSaved">
                        <span class="icon folder" aria-hidden="true"></span>Dataset
                    </a>
                </li>
                <li>
                    <a href="/evaluation">
                        <span class="icon image" aria-hidden="true"></span>Evaluation
                    </a>
                </li>
                <li>
                    <a href="/backup">
                        <span class="icon backup" aria-hidden="true"></span>Backup
                    </a>
                    <ul class="cat-sub-menu">
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="sidebar-footer">
        <a class="sidebar-user">
            <span class="sidebar-user-img">
                <picture><source srcset="./img/avatar/avatar-illustrated-02.webp" type="image/webp"><img src="./img/avatar/avatar-illustrated-01.png" alt="User name"></picture>
            </span>
            <div class="sidebar-user-info">
                <span class="sidebar-user__title"><%= userName %></span>
                <span class="sidebar-user__subtitle">Administrator</span>
            </div>
        </a>
    </div>
</aside>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Dapatkan URL saat ini
        var currentUrl = window.location.pathname;
    
        // Iterasi setiap link di sidebar
        $('.sidebar-body-menu a').each(function () {
            // Cek apakah href dari link cocok dengan URL saat ini
            if ($(this).attr('href') === currentUrl) {
                // Hapus kelas active dari elemen lain
                $('.sidebar-body-menu a').removeClass('active');
                // Tambahkan kelas active ke elemen yang sesuai
                $(this).addClass('active');
            }
        });
    });
    </script>